
<%= simple_form_for(@raw_material) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :quantity %>
    <%= f.input :log %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>


<%= simple_form_for(@raw_material, url: add_quantity_path) do |f| %>
    <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs">
    <%= text_field_tag(:quantity) %>
    <%= hidden_field_tag(:raw_material_id, @raw_material.id) %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
  <% end %>

